    {
      "name": "soap request",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const responseText = pm.response.text(); // Get the response body as a string   ",
              "pm.test(\"Status is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Contains SOAP Envelope\", function () {",
              "    pm.expect(responseText).to.include(\"Envelope\");",
              "});",
              "",
              "pm.test(\"Contains expected node\", function () {",
              "    pm.expect(responseText).to.include(\"getEmployeeResponse\");",
              "});",
              "",
              "pm.test(\"Contains all fields\", function () {",
              "    pm.expect(responseText).to.include(\"id\");",
              "    pm.expect(responseText).to.include(\"name\");",
              "    pm.expect(responseText).to.include(\"role\");",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "text/xml",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\"\n                  xmlns:urn=\"urn:EmployeeService\">\n   <soapenv:Header/>\n   <soapenv:Body>\n      <urn:getEmployee>\n         <id>1</id>\n      </urn:getEmployee>\n   </soapenv:Body>\n</soapenv:Envelope>",
          "options": {
            "raw": {
              "language": "xml"
            }
          }
        },
        "url": {
          "raw": "http://localhost:8000/employee",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8000",
          "path": [
            "employee"
          ]
        }
      },
      "response": []
    },
